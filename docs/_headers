# Cache fonts forever
/assets/fonts/*
  Cache-Control: public
  Cache-Control: max-age=365000000
  Cache-Control: immutable

# Cache images for a week
/assets/images/*
  Cache-Control: public
  Cache-Control: max-age=604800

# Cache styles for a week
/assets/styles/*
  Cache-Control: public
  Cache-Control: max-age=604800